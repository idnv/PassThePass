@model PasswordGenerator2.Models.SignUpStep
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.storageapi.js"></script>
@{
    ViewBag.Title = "Password have been changed";
}


<head>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"></script>
    <script>


        function AddMail() {
            var c = String.fromCharCode(13);
            document.getElementById("allmail").value += c + document.getElementById("mailInput").value;

        }
    </script>

</head>

<form asp-action="ForgetPass">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
        {
            <h4 class="has-error">@ViewBag.Message</h4>

        }
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10" oninput="AddMail()">
                @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @id = "mailInput" } })
                @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Mail, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
    </div>
    <input type="text" hidden id="allmail" name="allmail" value="" />
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input id="submitButton" type="submit" value="המשך" class="btn btn-default" />
        </div>
    </div>


</form> 


